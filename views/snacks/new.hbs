{{#if error}}
<div class="alert alert-danger">
  {{ error }}
</div>
{{/if}}

<form method="POST" action="/snacks" class="well">
  <div class="form-group">
    <label for="name">name</label> <input id="name" name="name"type="text" class="form-control" value="{{snacks.name}}">
  </div>
  <div class="form-group">
    <label for="image">image-url</label> <input id="image-url" name="image-url" type="text" class="form-control" value="{{snacks.image-url}}">
  </div>
  <div class="form-group">
    <label for="item">review description</label> <input id="review-description" name="review-description" type="text" class="form-control" value="{{snacks.review-description}}">
  </div>
  <div class="form-group">
    <label for="item">My Rating</label> <input id="my-rating" name="my-rating" type="number" class="form-control" min="1" max="5" value="{{snacks.my-rating}}">
  </div>



  <div class="form-group">
    <input id="submit" type="submit">
  </div>

</form>

